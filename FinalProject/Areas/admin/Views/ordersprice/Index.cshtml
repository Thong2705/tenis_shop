@{
    ViewBag.Title = "Index";
    var dailyStatistics = ViewBag.DailyStatistics as List<FinalProject.Models.OrderDailyStatisticsViewModel>;
    var monthlyStatistics = ViewBag.MonthlyStatistics as List<FinalProject.Models.OrderMonthlyStatisticsViewModel>;
    var yearlyStatistics = ViewBag.YearlyStatistics as List<FinalProject.Models.OrderYearlyStatisticsViewModel>;
    Layout = "~/Areas/admin/Views/Shared/_Layout.cshtml";
}

@section _Header
{
    <link href="~/vendor/datatables/dataTables.bootstrap4.min.css" rel="stylesheet">
}

<div class="container-fluid">

    <!-- Page Heading -->
    <div class="container">
        <h1 class="text-center text-uppercase text-primary text-shadow">
            <i class="far fa-newspaper"></i> Thống kê tiền
        </h1>
    </div>
            <h2>Thống kê theo ngày</h2>
            <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                <thead>
                    <tr>
                        <th>Ngày</th>
                        <th>Tổng số tiền</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in dailyStatistics)
                    {
                        <tr>
                            <td>@item.Date.ToShortDateString()</td>
                            <td>@item.TotalAmount</td>
                        </tr>
                    }
                </tbody>
            </table>
    </div>
<div class="container-fluid">
    <div class="card-body">
        <div class="table-responsive">
            <h2>Thống kê theo tháng</h2>
            <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                <thead>
                    <tr>
                        <th>Tháng</th>
                        <th>Năm</th>
                        <th>Tổng số tiền</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in monthlyStatistics)
                    {
                        <tr>
                            <td>@item.Month</td>
                            <td>@item.Year</td>
                            <td>@item.TotalAmount</td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
    </div>

<div class="container-fluid">
    <div class="card-body">
        <div class="table-responsive">
            <h2>Thống kê theo năm</h2>
            <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                <thead>
                    <tr>
                        <th>Năm</th>
                        <th>Tổng số tiền</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in yearlyStatistics)
                    {
                        <tr>
                            <td>@item.Year</td>
                            <td>@item.TotalAmount</td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>


    @section _Footer
{

        <!-- Page level plugins -->
        @*<script src="~/vendor/datatables/jquery.dataTables.min.js"></script>*@
        <script src="~/vendor/datatables/dataTables.bootstrap4.min.js"></script>

        <!-- Page level custom scripts -->
        <script src="~/Scripts/demo/datatables-demo.js"></script>
    }
