@model IEnumerable<FinalProject.Models.news>

@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/admin/Views/Shared/_Layout.cshtml";
}
@section _Header
{
    <link href="~/vendor/datatables/dataTables.bootstrap4.min.css" rel="stylesheet">
}

<div class="container-fluid">

    <!-- Page Heading -->
    <div class="container">
        <h1 class="text-center text-uppercase text-primary text-shadow">
            <i class="far fa-newspaper"></i> Quản lý tin tức
        </h1>
    </div>
    <!-- DataTales Example -->
    <div class="card shadow mb-4">

        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                    <p>
                        @Html.ActionLink("Create New", "Create", null, new { @class = "btn btn-outline-primary" })
                    </p>
                    <thead>
                        <tr>
                            <th>
                                @Html.DisplayName("Tiêu đề")
                            </th>
                            <th>
                                @Html.DisplayName("Hình ảnh")
                            </th>
                            <th>
                                @Html.DisplayName("Chi tiết")
                            </th>
                            <th>
                                @Html.DisplayName("Ẩn bản tin")
                            </th>
                            <th>
                                @Html.DisplayName("Thứ tự bài đăng")
                            </th>
                            <th>
                                @Html.DisplayName("Ngày chỉnh sửa")
                            </th>
                            <th></th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>
                                    @Html.DisplayFor(modelItem => item.name)
                                </td>
                                <td>
                                    <img src="~/Content/img/save-img/@item.img" width="100px" />
                                </td>
                                <td class="des" style="max-height: 4em;max-width:22em; overflow: hidden; text-overflow: ellipsis; display: -webkit-box; -webkit-line-clamp: 3; -webkit-box-orient: vertical;">
                                    @item.detail
                                </td>
                                <td>
                                    @if (item.hide == true)
                                    {
                                        <text>Ẩn</text>
                                    }
                                    else if (item.hide == false)
                                    {
                                        <text>Hiện</text>
                                    }
                                    else
                                    {
                                        <text>Không có trạng thái</text>
                                    }
                                </td>

                                <td>
                                    @Html.DisplayFor(modelItem => item.order)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.datebegin)
                                </td>
                                <td>
                                    <a href="@Url.Action("Edit", new { id = item.id })" class="btn btn-primary">
                                        <i class="fas fa-pencil-alt"></i>
                                    </a>
                                    <a href="@Url.Action("Details", new { id = item.id })" class="btn btn-info">
                                        <i class="fa fa-info-circle"></i>
                                    </a>

                                    <a href="@Url.Action("Delete", new { id = item.id })" class="btn btn-danger">
                                        <i class="fa fa-trash"></i>
                                    </a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

@section _Footer
{

    <!-- Page level plugins -->
    <script src="~/vendor/datatables/jquery.dataTables.min.js"></script>
    <script src="~/vendor/datatables/dataTables.bootstrap4.min.js"></script>

    <!-- Page level custom scripts -->
    <script src="~/Scripts/demo/datatables-demo.js"></script>
}