@model IEnumerable<FinalProject.Models.orderdetail>

@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/admin/Views/Shared/_Layout.cshtml";
}
@section _Header
{
    <link href="~/vendor/datatables/dataTables.bootstrap4.min.css" rel="stylesheet">
}
<div class="container-fluid">
    <div class="container">
        <h1 class="text-center text-uppercase text-primary text-shadow">
            <i class="far fa-newspaper"></i> Quản lý giỏ hàng
        </h1>
    </div>
    <!-- Page Heading -->
    <!-- DataTales Example -->
    <div class="card shadow mb-4">

        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                    <thead>
                        <tr>
                            <th>
                                @Html.DisplayName("Mã đơn hàng")
                            </th>
                            <th>
                                @Html.DisplayName("Tên sản phẩm")
                            </th>
                            <th>
                                @Html.DisplayName("Giá")
                            </th>
                            <th>
                                @Html.DisplayName("Số lượng")
                            </th>
                            <th></th>
                        </tr>
                    </thead>

                    <tbody>

                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>
                                    @Html.DisplayFor(modelItem => item.order.code)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.product.name)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.price)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.quantity)
                                </td>
                                <td>
                                    <a href="@Url.Action("Edit", new { id = item.id })" class="btn btn-primary">
                                        <i class="fas fa-pencil-alt"></i>
                                    </a>
                                    <a href="@Url.Action("Details", new { id = item.id })" class="btn btn-info">
                                        <i class="fa fa-info-circle"></i>
                                    </a>

                                    <a href="@Url.Action("Delete", new { id = item.id })" class="btn btn-danger">
                                        <i class="fa fa-trash"></i>
                                    </a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>
@section _Footer
{

    <!-- Page level plugins -->
    <script src="~/vendor/datatables/jquery.dataTables.min.js"></script>
    <script src="~/vendor/datatables/dataTables.bootstrap4.min.js"></script>

    <!-- Page level custom scripts -->
    <script src="~/Scripts/demo/datatables-demo.js"></script>
}

