@model FinalProject.Models.product
@{
    ViewBag.Title = Model.name;
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<!DOCTYPE html>
<html lang="en">

<body>
        <!-- Header Area End -->
        <!-- Product Details Area Start -->
        <div class="single-product-area section-padding-100 clearfix">
            <div class="container-fluid">

                <div class="row">
                    <h3 style="font-family: 'Montserrat', sans-serif; font-weight: bold;"> Chi tiết sản phẩm @Model.name</h3>
                </div>

                <div class="row">
                    <div class="col-12 col-lg-7">
                        <div class="single_product_thumb">
                            @Html.Action("Image_Product", "Product", new { id = @Model.id })
                        </div>
                    </div>
                    <div class="col-12 col-lg-5">
                        <div class="single_product_desc">
                            <!-- Product Meta Data -->
                            <div class="product-meta-data">
                                <div class="line"></div>
                                @{
                                    decimal price = Convert.ToDecimal(Model.price);
                                }
                                <p class="product-price">@price.ToString("N0")<span>đ</span></p>
                                <a href="#">
                                    <h6 style="font-family: Arial, Helvetica, sans-serif;">@Model.name</h6>
                                </a>
                                <!-- Ratings & Review -->
                                <div class="ratings-review mb-15 d-flex align-items-center justify-content-between">
                                    <div class="ratings">
                                        <i class="fa fa-star" aria-hidden="true"></i>
                                        <i class="fa fa-star" aria-hidden="true"></i>
                                        <i class="fa fa-star" aria-hidden="true"></i>
                                        <i class="fa fa-star" aria-hidden="true"></i>
                                        <i class="fa fa-star" aria-hidden="true"></i>
                                    </div>
                                </div>
                                <!-- Avaiable -->
                                <p class="avaibility"><i class="fa fa-circle"></i> Available</p>
                            </div>

                            <div class="short_overview my-5">
                                @{
                                    var shortDetail = "";
                                    if (!string.IsNullOrEmpty(Model.description))
                                    {
                                        shortDetail = Model.description;
                                    }
                                    else
                                    {
                                        shortDetail = "-----Không có Chi tiết-----";
                                    }
                                }

                                <h3 style="font-family: Arial, Helvetica, sans-serif;">Thông tin sản phẩm</h3>
                                <p style="font-family: Arial, Helvetica, sans-serif;">
                                    Màu sắc: @Model.color
                                </p>
                                <p style="font-family: Arial, Helvetica, sans-serif;">
                                    Kích thước: @Model.size
                                </p>
                                <h3 style="font-family: Arial, Helvetica, sans-serif;">
                                    Mô tả chi tiết
                                </h3>
                                <p>
                                    @Html.Raw(shortDetail.Replace("<p>", "<span style=\"font-family: Arial, Helvetica, sans-serif;\">").Replace("</p>", "</span>"))
                                </p>
                            </div>

                            <!-- Add to Cart Form -->
                            <form class="cart clearfix" method="post">
                                <div class="cart-btn d-flex mb-50" >
                                    <p style="background-color: #8ca1c3; background-image: linear-gradient(180deg,#94e9a878 10%,#173725 100%); color: #f3e9c0; font-family: 'Montserrat', sans-serif; font-weight: bold;">Số lượng</p>
                                    <div class="quantity" style="border: 1px solid #000;">
                                        <span class="qty-minus" onclick="var effect = document.getElementById('qty'); var qty = effect.value; if( !isNaN( qty ) &amp;&amp; qty &gt; 1 ) effect.value--;return false;"><i class="fa fa-caret-down" aria-hidden="true"></i></span>
                                        <input type="number" class="qty-text" id="qty" step="1" min="1" max="300" name="quantity" value="1">
                                        <span class="qty-plus" onclick="var effect = document.getElementById('qty'); var qty = effect.value; if( !isNaN( qty )) effect.value++;return false;"><i class="fa fa-caret-up" aria-hidden="true"></i></span>
                                    </div>
                                </div>
                                <a href="#" data-id="@Model.id" class="btnAddToCart" style=" color: #3c3c25; font-size: 20px; font-family: Arial, Helvetica, sans-serif; background-image: linear-gradient(180deg,#feeeac 10%,#ff0505 100%);">Thêm vào giỏ hàng</a>                            </form>

                        </div>
                    </div>
                </div>
            </div>
        </div>
        <!-- Product Details Area End -->
    </div>
    <!-- ##### Main Content Wrapper End ##### -->
    <!-- ##### Newsletter Area Start ##### -->



</body>

</html>
<style>
    .btnAddToCart {
        font: bold Arial;
        text-decoration: none;
        background-color: #123d06;
        color: #333333;
        padding: 2px 6px 2px 6px;
        border-top: 1px solid #CCCCCC;
        border-right: 1px solid #333333;
        border-bottom: 1px solid #333333;
        border-left: 1px solid #CCCCCC;
    }
    .carousel-indicators li {
        box-shadow: 10px 10px 6px rgba(0, 0, 0, 0.2);
    }
</style>