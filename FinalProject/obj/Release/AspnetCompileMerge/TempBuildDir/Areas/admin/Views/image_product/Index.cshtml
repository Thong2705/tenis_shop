<div class="container-fluid">

    <!-- Page Heading -->
    <div class="container">
        <h1 class="text-center text-uppercase text-primary text-shadow">
            <i class="fas fa-list"></i> Quản Lý Danh Mục Hình Ảnh Sản Phẩm
        </h1>
    </div>

    <!-- DataTales Example -->
    <div class="card shadow mb-4">

        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                    <p>
                        @Html.ActionLink("Create New", "Create", null, new { @class = "btn btn-outline-primary" })
                    </p>
                    <thead>
                        <tr>
                            <th>
                                @Html.DisplayName("Hình ảnh sản phẩm")
                            </th>
                            <th>
                                @Html.DisplayName("Thứ tự sản phẩm")
                            </th>
                            <th>
                                @Html.DisplayName("Tên sản phẩm")
                            </th>
                            <th>Chỉnh sửa</th>
                        </tr>
                    </thead>

                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>
                                    <img src="~/Content/img/product-img/@item.img" width="100px" />
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.order)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.product.name)
                                </td>
                                <td>
                                    <a href="@Url.Action("Edit", new { id = item.id })" class="btn btn-primary">
                                        <i class="fas fa-pencil-alt"></i>
                                    </a>
                                    <a href="@Url.Action("Details", new { id = item.id })" class="btn btn-info">
                                        <i class="fa fa-info-circle"></i>
                                    </a>

                                    <a href="@Url.Action("Delete", new { id = item.id })" class="btn btn-danger">
                                        <i class="fa fa-trash"></i>
                                    </a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>

</div>

@section _Footer
